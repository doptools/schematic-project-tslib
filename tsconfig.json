{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ]
  },
  "exclude": ["src/*/files*.*/"]
}
